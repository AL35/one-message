<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center_horizontal"
  android:orientation="vertical"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  tools:context="onemessagecompany.onemessage.Admin.EditUserActivity">



  <ScrollView
      android:id="@+id/login_form"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/pad_5dp"
            android:src="@drawable/om_edit_user" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:paddingLeft="@dimen/pad_10dp"
            android:paddingTop="@dimen/pad_5dp"
            android:text="@string/title_activity_edit_user_body"
            android:textColor="@color/colorMain"
            android:textSize="@dimen/pad_20dp" />

      </LinearLayout>


      <EditText
          android:id="@+id/edit_UserName"
          android:background="@color/gray_light"
          android:layout_gravity="left"
          android:textAlignment="gravity"
          android:layout_margin="@dimen/pad_5dp"
          android:paddingLeft="@dimen/pad_10dp"
          android:textSize="@dimen/pad_15dp"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginBottom="@dimen/pad_10dp"
          android:hint="@string/add_user_name"
          android:inputType="text"
          android:maxLines="1"
          android:singleLine="true" />


      <EditText
          android:id="@+id/edit_FirstName"
          android:background="@color/gray_light"
          android:layout_gravity="left"
          android:textAlignment="gravity"
          android:layout_margin="@dimen/pad_5dp"
          android:paddingLeft="@dimen/pad_10dp"
          android:textSize="@dimen/pad_15dp"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginBottom="@dimen/pad_10dp"
          android:layout_marginTop="@dimen/pad_5dp"
          android:hint="@string/add_first_name"
          android:inputType="text"
          android:maxLines="1"
          android:singleLine="true" />

      <EditText
          android:id="@+id/edit_LastName"
          android:background="@color/gray_light"
          android:layout_margin="@dimen/pad_5dp"
          android:layout_gravity="left"
          android:textAlignment="gravity"
          android:paddingLeft="@dimen/pad_10dp"
          android:textSize="@dimen/pad_15dp"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginBottom="@dimen/pad_10dp"
          android:layout_marginTop="@dimen/pad_5dp"
          android:hint="@string/add_last_name"
          android:inputType="text"
          android:maxLines="1"
          android:singleLine="true" />



      <Switch
          android:id="@+id/edit_switch"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/pad_5dp"
          android:text="Active User  "
          android:textSize="17dp"
          android:textColor="@color/colorMain"
          android:layout_marginLeft="@dimen/pad_5dp"/>


      <Button
          android:id="@+id/edit_button"
          android:textColor="@color/white"
          android:textAllCaps="false"
          android:textSize="@dimen/pad_20dp"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginTop="16dp"
          android:background="@color/colorMain"
          android:text="@string/edit_user_save" />

    </LinearLayout>
  </ScrollView>

</LinearLayout>
