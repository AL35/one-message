<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ac_config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="onemessagecompany.onemessage.Admin.ConfigActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/pad_5dp"
            android:layout_marginTop="@dimen/pad_10dp"
            android:src="@drawable/om_config" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/pad_5dp"
            android:text="Settings"
            android:textAlignment="center"
            android:textColor="@color/colorMain"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/pad_30dp">


        <onemessagecompany.onemessage.NumberPickerCustom
            android:id="@+id/numberPicker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:descendantFocusability="blocksDescendants"

            />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numberPicker1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pad_10dp"
            android:gravity="center"
            android:text="Deletion time :"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <Button
            android:id="@+id/config_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="5dp"
            android:background="@color/colorMain"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"

            android:textSize="@dimen/pad_20dp" />
    </LinearLayout>

</RelativeLayout>
