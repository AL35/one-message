<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/rl_quit_learning"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/custom_alert_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMain"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="Quit LEarning?"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/custom_alert_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custom_alert_header"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="You are 400pts. away from \n unlocking rewards. Quit LEarning?"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/pad_20dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <ImageButton
                android:id="@+id/customDialogCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/om_cancel"
                android:background="@color/transparent"
                android:layout_marginRight="@dimen/pad_15dp"
                android:text="Cancel"
                android:layout_margin="@dimen/pad_5dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/customDialogOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/om_ok"
                android:layout_margin="@dimen/pad_5dp"
                android:background="@color/transparent"
                android:text="Video"
                android:layout_weight="1"/>

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>