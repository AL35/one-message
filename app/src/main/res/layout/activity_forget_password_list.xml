<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"

  tools:context="onemessagecompany.onemessage.Admin.ForgetPasswordListActivity"
  android:id="@+id/admin_main_activity_drawer_layout">

  <LinearLayout
      android:id="@+id/admin_no_notifications"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:visibility="gone">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No data to display"
        android:textSize="20dp"
        android:visibility="visible" />
  </LinearLayout>

  <RelativeLayout


      android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
      android:id="@+id/forget_password_recycler_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="vertical" />

  </RelativeLayout>


</android.support.v4.widget.DrawerLayout>
