<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/movies_layout"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:gravity="center_vertical"
  android:minHeight="72dp"
  android:orientation="horizontal">

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
      android:id="@+id/item_list_message_body"
      style="@style/TextAppearance.AppCompat.Large"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="wesadfasfsf"
      android:paddingTop="@dimen/pad_15dp"
      android:paddingLeft="16dp"/>


    <TextView
      android:id="@+id/item_list_message_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="@dimen/pad_20dp"
      android:paddingLeft="16dp"
      android:textColor="@color/colorGreyLight" />

  </LinearLayout>

  <LinearLayout
    android:layout_marginRight="@dimen/pad_15dp"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/remove_msg"
      android:layout_width="15dp"
      android:layout_height="15dp"
      android:layout_centerInParent="true"
      android:scaleType="centerCrop"
      android:src="@drawable/ic_cancel"
      android:tint="@color/colorAccent" />


  </LinearLayout>

</LinearLayout>
